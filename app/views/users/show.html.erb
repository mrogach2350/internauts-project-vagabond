<h2>Profile!</h2>
  <div class="show">
    <div class="user four columns">
      <div class="user_name">Hello <%= @user.name %>!</div>
      <ul>
        <%= image_tag @user.avatar.url(:thumb), class: 'profile-image' %>
        <h4><b>Current City:</b><br><%= @user.current_city%></h4>
        <%= link_to edit_user_path, class: "rm_line" do %>
          <% if current_user && current_user == @user %>
            <div class="button edit_profile"> <%= image_tag("Pencil.png", border: 0) %>Edit Profile</div>
          <% end %>
        <% end %>
      </ul>
    </div>

  <div class="post six columns">
    <h3>Posts!</h3>
      <% user = @user.posts.sort_by {|post| post.created_at} %>
      <% user.reverse.each do |post| %>
        <%= link_to post.title, post_path(post) %>
        <div class="glyph">
          <%= image_tag("Pencil.png", border: 0) %>
          <%= image_tag("Bin.png", border: 0) %>
        </div>
        <hr>
      <% end %>
  </div>

