<h1>Edit Your Post!</h1>

<div class="form_container six columns offset-by-three columns">
  <div class="form">
    <%= form_for [@city, @post], url: "/cities/" + @city.id.to_s + "/posts/" + @post.id.to_s, method: 'patch' do |f| %>

      <%= f.label "Title"  %>
      <%= f.text_field :title, placeholder: "Post Title" %> <br>

      <%= f.label "Your Tip"  %>
      <%= f.text_area :content, placeholder: "Tell Us About Your Travel Tip"  %> <br>

      <div class="btns">
        <%= f.submit "Update", :class => "button", :id => "edit_btn"  %>
        <%= link_to user_path(@post.user_id), class: "rm_line" do %>
          <div class="button user_back_btn">Profile</div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
